---

<!-- Contenedor principal de Swiper -->
<div class="justify-center items-center mx-auto">
  <div class="my-4 w-full">
    <img
      src={selectedHouse.logobooking}
      class="absolute z-50 sm:w-48 w-24 hidden sm:block sm:mt-12 mt-2"
    />
    <div class="swiper w-screen lg:w-auto">
      <!-- Wrapper adicional requerido -->
      <div class="swiper-wrapper">
        <!-- Los slides -->
        {
          selectedHouse &&
            selectedHouse.photos.map((photo) => (
              <div class="swiper-slide">
                <img src={photo} alt="" class="w-full" />
              </div>
            ))
        }
      </div>
      <!-- Botones de navegación -->
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div>
  </div>
</div>

<script>
  // Core de Swiper y estilos
  import Swiper from "swiper";
  import "swiper/css";
  // Módulo Navigation de Swiper y estilos
  import { Navigation } from "swiper/modules";
  import "swiper/css/navigation";

  // Configurar Swiper
  const swiper = new Swiper(".swiper", {
    modules: [Navigation], // definir los módulos a usar
    loop: true, // definir si los slides estarán en bucle
    slidesPerView: 1, // agregar número de slides para la pantalla
    spaceBetween: 40, // separación entre slides en px
    navigation: {
      // definir botones next y prev para el módulo Navigation
      prevEl: ".swiper-button-prev",
      nextEl: ".swiper-button-next",
    },
  });
</script>

