---
import { lastNews } from "../data/news.ts";
---

<div class="flex flex-col gap-12 w-full">
  <h3 class="uppercase text-2xl md:text-4xl text-center text-sky-700">
    <span class="font-bold">Últimas</span> Noticias
  </h3>

  <div class="flex flex-col md:flex-row gap-6 items-start mx-auto">
    {
      lastNews.map((news) => {
        return (
          <div class="flex flex-col w-full sm:w-[24rem] px-5 sm:px-0 gap-4">
            <div class="flex1 flex-col1 gap-2">
              <img src={news.img} alt={news.title} class="w-full" />
              <h4 class="font-bold text-sky-700 text-lg">{news.title}</h4>
            </div>
            <div class="flex gap-1 1items-center">
              <a class="uppercase text-sm text-sky-600">Ver más</a>
              <img src="/figueiras/bluelink.svg" alt="" class="w-3" />
            </div>
          </div>
        );
      })
    }
  </div>
</div>
