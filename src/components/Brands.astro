---
import { brands } from '../data/brands.js';
---

<div
  class="flex flex-col lg:flex-row gap-4 lg:gap-24 items-center justify-center"
>
  <img src="/logofigueiras.svg" class="w-64" />

  <div
    class="flex flex-wrap w-56 justify-center gap-1 lg:gap-2 lg:justify-start"
  >
    {
      brands.map((brand) => (
        <img src={brand.src} class="w-16 object-contain" alt={brand.name} />
      ))
    }
  </div>
</div>
